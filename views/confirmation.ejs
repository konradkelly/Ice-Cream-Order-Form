<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Your Order is Confirmed!</title>
		<link rel="stylesheet" href="styles/ice-cream.css" />
		<link rel="icon" type="image/png" href="images/favicon-16x16.png" />
	</head>
	<body>
		<main>
			<div class="confirmation-card">
				<div class="checkmark-circle">âœ“</div>
				<h1>Thank You for Your Order!</h1>
				<p style="color: #777; font-size: 0.9em; margin-bottom: 30px">
					Your ice cream order has been confirmed
				</p>

				<% if (order) { %>

				<!-- Personal Information Section -->
				<div class="section-header">Personal Information</div>
				<div class="order-section">
					<div class="order-row">
						<span class="order-label">Name:</span>
						<span class="order-value"><%= order.name %></span>
					</div>
					<div class="order-row">
						<span class="order-label">Email:</span>
						<span class="order-value"><%= order.email %></span>
					</div>
				</div>

				<!-- Order Details Section -->
				<div class="section-header">Order Details</div>
				<div class="order-section">
					<div class="order-row">
						<span class="order-label">Flavor:</span>
						<span class="order-value"><%= order.flavor %></span>
					</div>
					<div class="order-row">
						<span class="order-label">Cone Type:</span>
						<span class="order-value"><%= order.cone %></span>
					</div>
					<div class="order-row">
						<span class="order-label">Toppings:</span>
						<span class="order-value">
							<% if (order.toppings && order.toppings.length) { %> <%
							order.toppings.forEach(topping => { %>
							<span class="topping-pill"><%= topping %></span>
							<% }); %> <% } else { %> None <% } %>
						</span>
					</div>
				</div>

				<!-- Additional Comments Section -->
				<div class="section-header">Additional Comments</div>
				<div class="comment-box">
					<%= order.comment || 'No special requests.' %>
				</div>

				<!-- Action Buttons -->
				<div class="button-group">
					<a href="#" class="button print-order">Print Order</a>
					<a href="/" class="button place-another">Place Another Order</a>
				</div>

				<% } else { %>
				<p style="color: #d32f2f; margin: 20px 0">
					No order found. Please submit an order first.
				</p>
				<a href="/" class="button place-another">Back to Home</a>
				<% } %>
			</div>
		</main>
	</body>
	<footer class="admin-link">
		<a href="/admin">Admin Route</a>
	</footer>
</html>
